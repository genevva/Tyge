# Claude CLI 路径（留空则自动探测）
CLAUDE_CLI_PATH=

# HTTP 配置
API_HOST=0.0.0.0
API_PORT=8000

# 默认工作目录
DEFAULT_CWD=/tmp/

# 默认允许的工具（逗号分隔）
DEFAULT_ALLOWED_TOOLS=WebSearch,Read,Write,Edit,Bash

# 默认模型
DEFAULT_MODEL=claude-sonnet-4-5

# Thinking 配置
ENABLE_THINKING_BY_DEFAULT=true
DEFAULT_MAX_THINKING_TOKENS=8000

# 权限模式：default | acceptEdits | bypassPermissions | plan
DEFAULT_PERMISSION_MODE=acceptEdits

# 最大轮次
DEFAULT_MAX_TURNS=99999

# 调试模式
DEBUG=false
